<!doctype html>
<html lang="en" class="light">

<head>
    {% include "head.njk" %}
</head>

<body
    class="dark:text-gray-300 dark:bg-dark-body bg-white text-gray-900 overflow-x-hidden sm:overflow-auto">
    <div class="grid grid-flow-col sm:grid-cols-regular h-screen" dir="rtl">
        <div id="sidebar"
            class="hidden sm:block sidebar transition-transform sm:translate-x-0 transform sm:transition-none">
            {% include "sidebar.njk" %}
        </div>
        <div id="right-area"
            class="overflow-x-hidden sm:overflow-auto transition-transform transform sm:translate-x-0 sm:transition-none">
            <div id="top-bar"
                class="sm:hidden z-10 bg-white dark:bg-dark-heading transition-transform duration-200 ease-in sm:sticky top-0 border-gray-600 border-b-1 dark:border-transparent border-opacity-30 shadow-lg">
                <div class="grid grid-flow-col grid-cols-auto md:grid-cols-topbar max-w-content">
                    <div id="mobile-top-bar" class="flex h-16 items-center leading-12 sm:hidden col-span-2">
                        <svg viewBox="0 0 100 80" class="block align-middle h-12 leading-12 mr-3 py-3 pt-4"
                            onclick="slideLeftSidebar()">
                            <rect width="80" height="7"></rect>
                            <rect y="30" width="80" height="7"></rect>
                            <rect y="60" width="80" height="7"></rect>
                        </svg>
                        <p class="flex-grow inline align-middle leading-12 text-xl text-center font-medium">{{
                            globalConfig.title }}</p>
                    </div>
                </div>
                <div></div>
            </div>
            <div class="dark:bg-dark-body grid grid-flow-col grid-cols-auto xl:grid-cols-topbar max-w-content mb-12">
                <main class="min-w-0">
                    {{ content | safe }}
                </main>
                <aside class="hidden xl:block w-72 float-right">
                    {% include "recents.njk" %}
                    {% include "toc.njk" %}
                </aside>
            </div>
        </div>
    </div>
    <div id="scroll" class="scroll" onclick="scrollToTop()">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1000 1000" class="h-6 w-6">
            <g>
                <path
                    d="M990,699.9c0,8.1,0,16.3-8.1,24.4c-16.3,16.3-40.7,16.3-56.9,0L502,350.2L79.1,732.4c-16.3,16.3-40.7,16.3-56.9,0c-16.3-16.3-16.3-40.7,0-56.9l447.3-406.6c24.4-16.3,40.7-16.3,56.9-8.1l447.3,406.6C981.9,675.5,990,691.8,990,699.9z">
                </path>
            </g>
        </svg>
    </div>
</body>

</html>