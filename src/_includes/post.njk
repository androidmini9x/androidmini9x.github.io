---
layout: base.njk
---

<main class="max-w-6xl mx-auto px-6 py-10 relative">
	<article class="content bg-white/80 dark:bg-slate-800/60 p-10 rounded-2xl border border-white/5 shadow">
		<header>
			<h1 id="postTitle" class="text-3xl font-extrabold">{{ title }}</h1>
			<div class="text-xs text-slate-500 mt-2">{{ date | readableDateEN }} â€¢ UI / Design</div>
		</header>

		<section id="postContent" class="mt-6 space-y-6 text-slate-700 dark:text-slate-200 leading-relaxed">
			{{ content | safe }}
		</section>
	</article>
	<div class="block w-full h-1 border-solid border-b-1 border-gray-700"></div>
	<div class="additions flex flex-col sm:flex-row gap-3 mt-6 px-4 w-full">	
		{% set previousPost = collections.posts | getPreviousCollectionItem(page) %}	
		{% set nextPost = collections.posts | getNextCollectionItem(page) %}	
	  	<a href="{{ previousPost.url }}" class="flex-1">	
			<div class="leading-pagination text-center{% if previousPost.url %} hover:bg-indigo-200 dark:hover:bg-indigo-900 hover:text-gray-500 dark:hover:text-gray-200 cursor-pointer{% else %} cursor-not-allowed{% endif %} overflow-auto">	
				<span class="text-xs block mt-1 mb-3">&lt;&lt; Older</span>	
				<span class="text-sm">{% if not previousPost.url %} - {% else %}{{ previousPost.data.title | truncate(40) }}{% endif %}</span>	
			</div>	
		</a>
	  	<a href="{{ nextPost.url }}" class="flex-1">	
		  	<div class="leading-pagination text-center{% if nextPost.url %} hover:bg-indigo-200 dark:hover:bg-indigo-900 hover:text-gray-500 dark:hover:text-gray-200 cursor-pointer{% else %} cursor-not-allowed{% endif %} overflow-auto">	
				<span class="text-xs block mt-1 mb-3">Newer &gt;&gt;</span>	
				<span class="text-sm">{% if not nextPost.url %} - {% else %}{{ nextPost.data.title | truncate(40) }}{% endif %}</span>	
			</div>	
		</a>	
	</div>
	{% set relatedPosts = related %}	
	{% if relatedPosts %}
	<div class="block w-full h-1 border-solid border-b-1 border-gray-700"></div>
	<span class="content text-gray-800 dark:text-gray-400">Related</span>	
	<div class="content additions flex mt-6 border-solid border-b-1 border-gray-700 mr-8 lg:mr-24">	
	  	{% for post in relatedPosts %}	
	  	<a href="{{ post.url }}"  class="flex-1">	
		  	<div class="h-24 m-1 border-1 border-gray-700 leading-pagination text-center hover:bg-indigo-900 hover:text-gray-200 rounded">	
			  	<span class="text-xs block mt-1 mb-3">Recommended</span>	
				<span class="text-xl">{{ post.title }}</span>	
			</div>	
		</a>	
	  	{% endfor %}
	</div>
	{% endif %}
</main>